<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SubActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="#"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/txtmaso1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="53270"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Tên Bài Hát: "
                android:textStyle="normal"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/txtbaihat"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="CHÉN ĐẮNG(REMIX)"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="#4CAF50"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Lời Bài Hát: "
                android:textStyle="normal"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/txtloibaihat"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Bước chân lặng le, về trên phố khuya vắng em..."
                android:textSize="20sp"
                android:textColor="#4CAF50"
                android:layout_gravity="center"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Tên Tác Giả: "
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="normal"
                android:gravity="center"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/txttacgia"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Trung Lê Sơn"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#4CAF50"
                android:gravity="center"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Yêu Thích"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="normal"
                android:layout_gravity="center"
                android:gravity="center"/>

            <ImageButton
                android:id="@+id/btnlikesub"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/favourite" />
        </TableRow>
    </TableLayout>

</LinearLayout>